{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "moduleResolution": "node",
        "lib": ["es6"],
        "declaration": true,
        "declarationDir": "dist",
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "inlineSources": true,
        "sourceMap": true
    },
    "include": ["src/**/*.ts"]
}
